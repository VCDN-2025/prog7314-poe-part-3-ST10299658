<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Centered Logo Layout (for biometric mode) -->
    <LinearLayout
        android:id="@+id/biometricLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/logoImageCentered"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/biometricsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please authenticate with biometrics"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Normal Login Layout -->
    <LinearLayout
        android:id="@+id/normalLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/black_card_bg"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginBottom="14dp"
                android:text="Login"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="#B3B3B3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B3B3B3" />

            <EditText
                android:id="@+id/passET"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#B3B3B3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B3B3B3" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login with Email"
            android:textColor="@android:color/white"
            android:backgroundTint="#60A5FA"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSignInBtn"
            android:layout_width="142dp"
            android:layout_marginTop="10dp"
            android:layout_height="43dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="242dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Not Registered Yet? Sign Up!"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>